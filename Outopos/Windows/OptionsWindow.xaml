                    </Grid>
                </GroupBox>
            </Grid>

            <Grid Grid.Column="2" Visibility="{Binding ElementName=_eventsTreeViewItem, Path=IsSelected, Converter={StaticResource _boolToVisibilityConverter}}">
                <GroupBox Header="{Binding Path=OptionsWindow_Events_Connection, Source={StaticResource ResourcesInstance}}" Height="109" Margin="6,6,6,0" VerticalAlignment="Top">
                    <Grid>
