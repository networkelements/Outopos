                    </Grid.ColumnDefinitions>
                    <Button Name="_lengthRangeUpButton" Height="23" HorizontalAlignment="Right" Margin="0,0,330,6" VerticalAlignment="Bottom" Width="75" Content="{Binding Path=SearchItemEditWindow_Up, Source={StaticResource ResourcesInstance}}" Click="_lengthRangeUpButton_Click" Grid.ColumnSpan="2" IsEnabled="False" />
